<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gender_age_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="27dp"
        android:layout_alignParentTop="true"
        android:text="성별과 나이를 입력해 주세요."
        android:textSize="18sp"
        android:letterSpacing="-0.01"
        android:textColor="#000000"
        android:gravity="top"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="27dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:text="회원님이 활동할 때  필요해요."
        android:textSize="12sp"
        android:letterSpacing="-0.01"
        android:textColor="#000000"
        android:gravity="top"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:text="성별"
        android:textSize="14sp"
        android:letterSpacing="-0.01"
        android:textColor="#222222"
        android:gravity="top"
        />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/M_radio_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:background="#000000"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="31dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:text="남자"
        android:textSize="18sp"
        android:letterSpacing="-0.01"
        android:textColor="#000000"
        android:gravity="top"
        />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/W_radio_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="136dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:background="#000000"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="31dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="171dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:text="여자"
        android:textSize="18sp"
        android:letterSpacing="-0.01"
        android:textColor="#000000"
        android:gravity="top"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="141dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="159dp"
        android:text="생년월일을 입력해 주세요."
        android:textSize="14sp"
        android:letterSpacing="-0.01"
        android:textColor="#222222"
        android:gravity="top"
        />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/year_spinner"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="196dp"
        android:background="#000000"
        />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/month_spinner"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="162dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="196dp"
        android:background="#000000"
        />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/day_spinner"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="257dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="196dp"
        android:background="#000000"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gender_age_next_btn"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="다음"
        android:layout_marginTop="224dp"
        app:layout_constraintTop_toBottomOf="@+id/day_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>