<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/our_play_cl"
        android:layout_width="142dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="229dp"
        android:text="our play club,
PLUB!"
        android:textSize="24sp"
        android:letterSpacing="-0.01"
        android:textColor="#000000"
        android:gravity="center_horizontal|top"
        />

    <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/loginbtn"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:text="네이버 로그인"
        android:layout_alignParentTop="true"
        android:layout_marginTop="524dp"
        />

    <TextView
        android:text="이미 계정이 있으신가요?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/test_logoutbtn"
        android:layout_width="116dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="590dp"
        android:background="#00000000"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/some_id"
        android:layout_width="182dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="659dp"
        android:text="가입을 진행할 경우, 서비스 약관 및 개인정보 처리방침에 동의한 것으로 간주합니다."
        android:textSize="10sp"
        android:letterSpacing="-0.01"
        android:textColor="#000000"
        android:gravity="center_horizontal|top"
        />




</androidx.constraintlayout.widget.ConstraintLayout>