<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/access_authority_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:gravity="top"
        android:letterSpacing="-0.01"
        android:text="앱 접근 권한 안내"
        android:textColor="#222222"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="26dp"
        android:gravity="top"
        android:letterSpacing="-0.01"
        android:text="PLUB! 에서 사용되는 앱 접근 권한을 알려드립니다."
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="72dp"
        android:gravity="top"
        android:letterSpacing="-0.01"
        android:text="필수 접근 권한"
        android:textColor="#222222"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bi_phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="109dp"
        android:background="@color/black"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="105dp"
        android:gravity="top"
        android:lineSpacingExtra="5sp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:letterSpacing="-0.01"
        android:text="기기 및 앱 기록\n앱서비스 최적화 및 기기오류"
        android:translationY="-2.7sp" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:text="선택적 접근 권한"
        android:textSize="18sp"
        android:letterSpacing="-0.01"
        android:textColor="#2F2F2F"
        android:gravity="top"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:text="선택적 접근 권한은 해당 기능을 사용할 때 허용이 필요합니다.\n허용하지 않아도 해당 기능 외 서비스 이용가능합니다."
        android:textSize="10sp"
        android:letterSpacing="-0.01"
        android:textColor="#868686"
        android:lineSpacingExtra="2sp"
        android:translationY="-1sp"
        android:gravity="top"
        />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="243dp"
        android:clipToOutline="true"
        android:background="@color/black"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="239dp"
        android:text="사진 및 카메라\n앱서비스 최적화 및 기기오류"
        android:textSize="14sp"
        android:textColor="#000000"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.7sp"
        android:gravity="top"
        />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="299dp"
        android:clipToOutline="true"
        android:background="@color/black"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="295dp"
        android:text="알림\n앱서비스 최적화 및 기기오류"
        android:textSize="14sp"
        android:letterSpacing="-0.01"
        android:textColor="#000000"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.7sp"
        android:gravity="top"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/access_authority_next_btn"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="다음"
        android:layout_marginTop="450dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>