<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".socialing.InfoSocialingActivity">

    <ScrollView
        android:id="@+id/infoSocialScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            
            <ImageButton
                android:id="@+id/backButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginStart="15dp"
                />
            
            <TextView
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/backButton"
                android:layout_margin="2dp"
                app:layout_constraintStart_toEndOf="@id/backButton"
                android:layout_width="wrap_content"
                android:text="소셜링 홈"
                android:letterSpacing="-0.015"
                android:lineSpacingExtra="5sp"
                android:textAppearance="@style/socialinghome"
                android:layout_height="24dp"/>

            
            <ImageView
                android:id="@+id/SocialImageView"
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_height="281dp"
                android:background="@color/lightgray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="59dp"/>
            
            <ImageView
                android:id="@+id/SocialImageView2"
                app:layout_constraintStart_toStartOf="@id/SocialImageView"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView"
                android:layout_marginTop="6dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/lightgray"/>
            <View
                android:id="@+id/SocialImageView3"
                android:layout_width="54dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView"
                app:layout_constraintStart_toEndOf="@id/SocialImageView2"
                android:layout_alignParentTop="true"
                android:background="@color/lightgray"
                />
            <View
                android:id="@+id/SocialImageView4"
                android:layout_width="54dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                app:layout_constraintStart_toEndOf="@id/SocialImageView3"
                app:layout_constraintTop_toTopOf="@id/SocialImageView3"
                android:layout_marginStart="5dp"
                android:layout_alignParentTop="true"
                android:background="@color/lightgray"
                />

            <View
                android:id="@+id/SocialImageView5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                app:layout_constraintStart_toEndOf="@id/SocialImageView4"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView"
                android:layout_marginStart="5dp"
                android:layout_marginTop="32dp"
                android:layout_alignParentTop="true"
                android:background="@color/lightgray"
                />

            <TextView
                android:id="@+id/memberText"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="3/4"
                app:layout_constraintStart_toEndOf="@id/SocialImageView5"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView"
                android:layout_marginTop="30dp"
                android:layout_marginStart="5dp"
                android:textAppearance="@style/memberText"
                android:gravity="top"
                />

            <RelativeLayout
                app:layout_constraintTop_toBottomOf="@id/SocialImageView"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/fluent_more"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="24dp"
                android:clipToOutline="true"
                android:background="@color/lightgray"
                />

            <TextView
                android:id="@+id/study_with_"
                android:layout_width="304dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:layout_alignParentTop="true"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView2"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Study with ME! (TOEIC)"
                android:textAppearance="@style/study_with_"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/explainText"
                android:layout_width="312dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="446dp"
                android:text="별 자랑처럼 가득 그러나 이름자 이웃 거외다. 많은 내 릴케 거외다. 멀듯이, 그러나 봄이 아직 비둘기, 하늘에는 이름을 가슴속에 까닭입니다."
                android:letterSpacing="-0.01"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="2sp"
                android:translationY="-1.05sp"
                android:gravity="top"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hostgrid"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/explainText"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:elevation="10dp"
                android:background="@color/lightgray"
                >

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/host"
                android:layout_width="27dp"
                android:layout_height="12dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="HOST"
                android:textSize="10sp"
                    android:textColor="#000000"
                android:gravity="center_vertical"
                />

                <View
                    android:id="@+id/hostProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/ellipse_1"
                    />

                <TextView
                    android:id="@+id/hostname"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="33dp"
                    android:text="김아무개"
                    android:textSize="12sp"
                    android:letterSpacing="-0.01"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@id/hostProfile"
                    app:layout_constraintTop_toTopOf="parent"
                    android:lineSpacingExtra="4sp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/hostexplain"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_alignParentLeft="true"
                    app:layout_constraintStart_toStartOf="@id/hostname"
                    app:layout_constraintTop_toBottomOf="@id/hostname"
                    android:layout_alignParentTop="true"
                    android:text="안녕하세요 반갑습니다!"
                    android:textSize="14sp"
                    android:letterSpacing="-0.01"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4sp"
                    android:gravity="center_vertical"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heloo"
                android:textAlignment="center"
                android:textSize="50sp"
                app:layout_constraintTop_toBottomOf="@id/hostgrid"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heloo"
                android:textAlignment="center"
                android:layout_marginTop="100dp"
                android:textSize="50sp"
                app:layout_constraintTop_toBottomOf="@id/hostgrid"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/rectangle_8"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
app:realtimeBlurRadius="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <View
        android:id="@+id/rectangl"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="652dp"
        android:background="#33000000"
        />

</androidx.constraintlayout.widget.ConstraintLayout>