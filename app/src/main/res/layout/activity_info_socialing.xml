<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".socialing.InfoSocialingActivity">

    <ScrollView
        android:id="@+id/infoSocialScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoSocialContentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:background="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:letterSpacing="-0.015"
                android:lineSpacingExtra="5sp"
                android:text="소셜링 홈"
                android:textAppearance="@style/socialinghome"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="@id/backButton" />


            <ImageView
                android:id="@+id/SocialImageView"
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="59dp"
                android:layout_marginEnd="24dp"
                android:background="@color/lightgray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/SocialImageView2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:background="@color/lightgray"
                app:layout_constraintStart_toStartOf="@id/SocialImageView"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView" />

            <View
                android:id="@+id/SocialImageView3"
                android:layout_width="54dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@color/lightgray"
                app:layout_constraintStart_toEndOf="@id/SocialImageView2"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView" />

            <View
                android:id="@+id/SocialImageView4"
                android:layout_width="54dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:background="@color/lightgray"
                app:layout_constraintStart_toEndOf="@id/SocialImageView3"
                app:layout_constraintTop_toTopOf="@id/SocialImageView3" />

            <View
                android:id="@+id/SocialImageView5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="32dp"
                android:background="@color/lightgray"
                app:layout_constraintStart_toEndOf="@id/SocialImageView4"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView" />

            <TextView
                android:id="@+id/memberText"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:gravity="top"
                android:text="3/4"
                android:textAppearance="@style/memberText"
                app:layout_constraintStart_toEndOf="@id/SocialImageView5"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView" />

            <RelativeLayout
                android:id="@+id/fluent_more"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="24dp"
                android:background="@color/lightgray"
                android:clipToOutline="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView" />

            <TextView
                android:id="@+id/study_with_"
                android:layout_width="304dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="center_vertical"
                android:text="Study with ME! (TOEIC)"
                android:textAppearance="@style/study_with_"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SocialImageView2" />

            <TextView
                android:id="@+id/explainText"
                android:layout_width="312dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="446dp"
                android:gravity="top"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="2sp"
                android:text="별 자랑처럼 가득 그러나 이름자 이웃 거외다. 많은 내 릴케 거외다. 멀듯이, 그러나 봄이 아직 비둘기, 하늘에는 이름을 가슴속에 까닭입니다."
                android:textColor="#000000"
                android:textSize="14sp"
                android:translationY="-1.05sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hostgrid"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@color/white"
                android:elevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/explainText">

                <TextView
                    android:id="@+id/host"
                    android:layout_width="27dp"
                    android:layout_height="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="HOST"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/peopleInfoCanvas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/host"
                    app:layout_constraintStart_toStartOf="parent">

                    <View
                        android:id="@+id/hostProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ellipse_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hostname"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="4sp"
                        android:text="김아무개"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/hostProfile"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hostexplain"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="4sp"
                        android:text="안녕하세요 반갑습니다!"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/hostname"
                        app:layout_constraintTop_toBottomOf="@id/hostname" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <!-- Line 3 -->
                <View
                    android:id="@+id/line_3"
                    android:layout_width="272dp"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/line_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/peopleInfoCanvas" />

                <TextView
                    android:id="@+id/guest"
                    android:layout_width="33dp"
                    android:layout_height="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center_vertical"
                    android:text="GUEST"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/peopleInfoCanvas" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/peopleInfoCanvas2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/guest"
                    app:layout_constraintStart_toStartOf="parent">

                    <View
                        android:id="@+id/hostProfile2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ellipse_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hostname2"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="4sp"
                        android:text="이무진"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/hostProfile2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hostexplain2"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="4sp"
                        android:text="토인 이번엔 800 넘어보자 ㅜㅜ"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/hostname2"
                        app:layout_constraintTop_toBottomOf="@id/hostname2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/peopleInfoCanvas3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/peopleInfoCanvas2"
                    app:layout_constraintStart_toStartOf="parent">

                    <View
                        android:id="@+id/hostProfile3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ellipse_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hostname3"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="4sp"
                        android:text="박성우"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/hostProfile3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hostexplain3"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="4sp"
                        android:text="서로 끌어주면서 목표 달성!!(이모티콘)"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/hostname3"
                        app:layout_constraintTop_toBottomOf="@id/hostname3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonInfoCanvas"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/peopleInfoCanvas3"
                    app:layout_constraintStart_toStartOf="parent">

                    <View
                        android:id="@+id/hostProfile4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ellipse_1"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hostname4"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="4sp"
                        android:text="아직 자리가 남았어요!"
                        android:textColor="#C4C4C4"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/hostProfile4"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hostexplain4"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="4sp"
                        android:text="함께 활동해 볼까요?"
                        android:textColor="#C4C4C4"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/hostname4"
                        app:layout_constraintTop_toBottomOf="@id/hostname4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/joinButton"
                        android:layout_width="86dp"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toEndOf="@id/hostProfile4"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="146dp"
                        android:text="같이 할래요!"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/rectangle_2"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:text="Heloo"
                android:textAlignment="center"
                android:textSize="50sp"
                app:layout_constraintTop_toBottomOf="@id/hostgrid" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:text="Heloo"
                android:textAlignment="center"
                android:textSize="50sp"
                app:layout_constraintTop_toBottomOf="@id/hostgrid" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:text="Heloo"
                android:textAlignment="center"
                android:textSize="50sp"
                app:layout_constraintTop_toBottomOf="@id/hostgrid" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="800dp"
                android:text="Heloo"
                android:textAlignment="center"
                android:textSize="50sp"
                app:layout_constraintTop_toBottomOf="@id/hostgrid" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/rectangle_8"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:realtimeBlurRadius="10dp" />

    <View
        android:id="@+id/rectangl"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="652dp"
        android:background="#33000000"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>